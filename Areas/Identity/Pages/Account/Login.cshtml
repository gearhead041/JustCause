@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="form-box admin-form">
		<section>
			<form id="account" method="post">
				<h2>Use a local account to log in.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating">
					<input asp-for="Input.Email" class="form-control my-2" autocomplete="username" aria-required="true" />
					<label asp-for="Input.Email" class="form-label"></label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-floating">
					<input asp-for="Input.Password" class="form-control my-2" autocomplete="current-password" aria-required="true" />
					<label asp-for="Input.Password" class="form-label"></label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>

				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
				</div>
				<div class="my-flex-row">
					 <div>
						<div class="checkbox">
							<label asp-for="Input.RememberMe" class="form-label">
								<input class="form-check-input" asp-for="Input.RememberMe" />
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
					</div>
					<p>
						<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
					</p>
					
				</div>
			</form>
		</section>
</div>

@section Scripts {
		<partial name="_ValidationScriptsPartial" />
}
